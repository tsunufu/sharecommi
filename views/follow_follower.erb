<section class="center-vertical">
    <div class="container">
	<div class="row">
	<% unless Relationship.find_by(followed_id: params[:id]).nil? %>
		<% Relationship.where(followed_id: params[:id]).each do |relationship| %>
			<img class="col-md-1 rounded-circle my-3" width="40px" height="60px" src="<%= User.find(relationship.follower_id).icon %>">
			<a href="/follow/<%= User.find(relationship.follower_id).id %>/mypage" class="col-md-9 follow-name my-3 post_text"><%= User.find(relationship.follower_id).name %></a>
			<a class="col-md-2 my-3 btn" href="/home/<%= current_user.id %>/follow">フォローする</a><br>
		<% end %>
	<% end %>
	</div>
	</div>
</section>