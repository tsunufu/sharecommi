<section class="center-vertical">
	<div class="row">
	<% unless Relationship.find_by(followed_id: session[:user]).nil? %>
		<% Relationship.where(followed_id: session[:user]).each do |relationship| %>
			<img class="col-md-1 rounded-circle my-3" width="40" height="40" src="<%= User.find(relationship.follower_id).icon %>">
			<p class="col-md-8"><%= User.find(relationship.follower_id).name %></p>
			<a class="col-md-3 my-3 btn" href="/home/<%= current_user.id %>/follow">フォローする</a><br>
		<% end %>
	<% end %>
	</div>
</section>